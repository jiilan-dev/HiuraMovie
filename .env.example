####################################
# APP
####################################
APP_ENV=development
APP_NAME=hiuramovie-backend
APP_PORT=8080
RUST_LOG=info

####################################
# POSTGRESQL
####################################
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=hiuramovie
POSTGRES_USER=hiuramovie_user
POSTGRES_PASSWORD=hiuramovie_password

DATABASE_URL=postgresql://backend_user:backend_password@localhost:5432/hiuramovie

####################################
# REDIS
####################################
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_URL=redis://localhost:6379

####################################
# MINIO (S3 Compatible)
####################################
MINIO_ENDPOINT=http://localhost:9000
MINIO_REGION=us-east-1
MINIO_BUCKET_VIDEOS=videos
MINIO_BUCKET_THUMBNAILS=thumbnails

MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin123

AWS_ACCESS_KEY_ID=minioadmin
AWS_SECRET_ACCESS_KEY=minioadmin123
AWS_DEFAULT_REGION=us-east-1

####################################
# AUTH / JWT
####################################
JWT_SECRET=super-secret-jwt-key-change-this
JWT_ACCESS_EXPIRES_MINUTES=15
JWT_REFRESH_EXPIRES_DAYS=7

####################################
# COOKIE
####################################
COOKIE_DOMAIN=localhost
COOKIE_SECURE=false
COOKIE_HTTP_ONLY=true

####################################
# QUEUE (RabbitMQ)
####################################
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_URL=amqp://guest:guest@localhost:5672

####################################
# STREAMING
####################################
HLS_TOKEN_EXPIRES_SECONDS=300
SIGNED_URL_EXPIRES_SECONDS=600

####################################
# RATE LIMIT
####################################
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_SECONDS=60
